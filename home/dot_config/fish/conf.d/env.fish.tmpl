set -gx BASH_SILENCE_DEPRECATION_WARNING 1
set -gx BROWSER "open"
set -gx EDITOR "nvim"
set -gx ERL_AFLAGS "$ERL_AFLAGS -kernel shell_history enabled"
set -gx GPG_TTY "(tty)"
set -gx XDG_CACHE_HOME "$HOME/.cache"
set -gx XDG_CONFIG_HOME "$HOME/.config"
set -gx XDG_DATA_HOME "$HOME/.local/share"

{{- if eq .chezmoi.os "darwin" }}
set -gx DEVDIR "$HOME/Developer"
set -gx PLAYDATE_SDK_PATH "$HOME/Developer/PlaydateSDK"
set -gx SSH_AUTH_SOCK "$HOME/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
set -gx HOMEBREW_BUNDLE_NO_UPGRADE true
set -gx HOMEBREW_NO_AUTO_UPDATE true

eval "$(/opt/homebrew/bin/brew shellenv)"
{{- end }}

# Source system-local environment
if test -e "$HOME/.env.fish"
    source "$HOME/.env.fish"
end

# Add local executables to path
fish_add_path -gm "$HOME/.local/bin"

# Add libpq binaries to path
fish_add_path -gm /opt/homebrew/opt/libpq/bin

# Configure Bob (https://github.com/MordechaiHadad/bob)
set -gx BOB_CONFIG "$XDG_CONFIG_HOME/bob/config.toml"
fish_add_path -gm "$XDG_DATA_HOME/bob/nvim-bin"
